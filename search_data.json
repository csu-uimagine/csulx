---
layout: null
---
{
  {% for post in site.posts %}
    "{{ post.url | slugify }}": {
      "title": "{{ post.title | xml_escape }}",
      "description": "{{ post.description | xml_escape }}",
      "url": " {{ post.url | xml_escape }}",
      "tags": "{{ post.tags | xml_escape }}",
      "category": "{{ post.category | xml_escape }}",
      "content": "{{ post.content | strip_html | newline_to_br | strip_newlines | replace:'<br />',' ' | jsonify }}",
      "subject": "{{ post.subjects | xml_escape }}" 
    }{% unless forloop.last %},{% endunless %}{% endfor %}
    {% for page in site.pages %}{% if page.index == true %},
      "{{ page.url | slugify }}": {
        "title": "(Page) {{ page.title | xml_escape }}",
        "url": " {{ page.url | xml_escape }}",
        "category": "{{ page.category | xml_escape }}",
        "content": "{{ page.content | strip_html | strip_newlines | jsonify }}"
          
      }
      {% endif %}
      {% endfor %}
}